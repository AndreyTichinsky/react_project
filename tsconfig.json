{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "types/*": [
        "src/types/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@emotion/core"
    ],
    "target": "es5",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
